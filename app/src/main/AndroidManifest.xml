<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviecatalogue4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.SetReminderActivity"
            android:label="Settings" />

        <activity android:name=".Fragment.FavoriteFragment" />

        <activity
            android:name=".Activity.DetailsTvShowActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.DetailsMovieActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.BottomNavigationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".Provider.MovieProvider"
            android:authorities="com.example.moviecatalogue4"
            android:exported="true"
            android:readPermission="com.example.moviecatalogue4.READ_DATABASE"
            android:writePermission="com.example.moviecatalogue4.WRITE_DATABASE" />

        <receiver android:name=".Widget.FavoriteMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_movie_widget_info" />
        </receiver>

        <receiver
            android:name=".reminder.ReleaseAlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".reminder.DailyAlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".Widget.FavoriteWidgetService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_REMOTEVIEWS" />


        <service
            android:name=".Service.CleanupJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>
    <permission
        android:name="com.example.moviecatalogue4.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <permission
        android:name="com.example.moviecatalogue4.READ_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>